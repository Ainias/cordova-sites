{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es2015",
    "lib": [
      "es6",
      "es2016",
      "es2017",
      "es2021",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "src/client/types"
    ],
    "declaration": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "strict": false
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "dist",
    "bin",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "www",
    "platforms",
    "plugins",
    "webpack.config.js"
  ]
}
