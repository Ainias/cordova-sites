{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "es2016",
      "es2017",
      "es2021",
      "dom"
    ],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,

    "allowJs": true,
    "isolatedModules": false,
    "strict": true,
    "sourceMap": true,
  },
  "include": [
    "src/client",
    "src/client.ts",
    "src/shared",
    "src/shared.ts",
    "src/server",
    "src/server.ts"
  ],
  "exclude": [
    "dist",
    "bin",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "www",
    "platforms",
    "plugins",
    "webpack.config.js"
  ],
  "types": [
    "typePatches"
  ]
}
